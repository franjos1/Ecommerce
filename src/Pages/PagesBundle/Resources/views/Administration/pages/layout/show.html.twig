{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Pages</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('adminPages_edit', { 'id': page.id }) }}" class="btn btn-success pull-right">Modifier</a>
        <a href="{{ path('adminPages_index') }}" class="btn btn-primary pull-left">Retourner sur la liste</a>
    </div>
    
    <div>
        <br />
        <br />
        {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>        
{% endblock %}
