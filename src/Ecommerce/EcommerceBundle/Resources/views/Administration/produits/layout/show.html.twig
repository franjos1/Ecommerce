{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Produits</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}" class="btn btn-success pull-right">Modifier</a>
        <a href="{{ path('adminProduits_index') }}" class="btn btn-primary pull-left">Retourner sur la liste</a>
    </div>
    
    <div>
        <br />
        <br />
        {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>        
{% endblock %}
