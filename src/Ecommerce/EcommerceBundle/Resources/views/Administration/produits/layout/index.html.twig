{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="50%">Nom</th>
                <th width="10%">Prix</th>
                <th width="20%">Disponible</th>
                <th width="20%">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('adminProduits_show', { 'id': produit.id }) }}"><i class="fa fa-book"></i></a>&nbsp &nbsp
                    <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adminProduits_new') }}" class="btn btn-success">Cr√©er un nouveau produit</a>
{% endblock %}
