{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des categories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th width="80%">Nom</th>
                <th width="20%">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.nom }}</td>
                <td>
                    <a href="{{ path('adminCategories_show', { 'id': category.id }) }}"><i class="fa fa-book"></i></a>&nbsp &nbsp
                    <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adminCategories_new') }}" class="btn btn-success">Cr√©er une nouveau categorie</a>
{% endblock %}
