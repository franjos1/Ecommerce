{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}" class="btn btn-success pull-right">Modifier</a>
        <a href="{{ path('adminCategories_index') }}" class="btn btn-primary pull-left">Retourner sur la liste</a>
    </div>
    
    <div>
        <br />
        <br />
        {{ form_start(delete_form) }}
            <input class="btn btn-danger pull-right" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
