{% extends "::layout/layout.html.twig" %}

{% block titre %}{{ produit.nom }}{% endblock %}
{% block description %}{{ produit.description }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-sm-3">
                <div class="row">
                    {% include "::modulesUsed/navigation.html.twig" %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% include "UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig" %}
                    {% else %}
                        {% include "UtilisateursBundle:Default:modulesUsed/utilisateurs.html.twig" %}
                    {% endif %}
                    {% render(controller('EcommerceBundle:Panier:menu')) %}
                </div>
            </div>    

            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-6">
                        <img src="{{ produit.image.path }}" class="img-responsive">
                    </div>
                    <div class="col-sm-6">
                        <h3>{{ produit.nom }}</h3>
                        <h4>{{ produit.categorie.nom }}</h4>
                        <p>{{ produit.description }}</p>
                        <h4>{{ produit.prix|tva(produit.tva.multiplicate) }} FCFA</h4>
                        {% if panier[produit.id] is not defined %}
                            <form action="{{ path('ajouter', {'id' : produit.id}) }}" method="get">
                                <div class="input-group">
                                    <select name="qte" class="form-control">
                                        {%for i in 1..10 %}
                                            <option value="{{ i }}">{{ i }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <br />
                                <div class="">
                                    <button class="btn btn-primary">Ajouter au panier</button>
                                </div>
                            </form>
                        {% else %} 
                            <div>	
                                <a href="{{ path('panier') }}" class="btn btn-primary">Le produit est déjà dans votre panier</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}