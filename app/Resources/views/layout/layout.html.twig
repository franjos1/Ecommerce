<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{% block titre %}Ecommerce Fruits & Légumes - By Franjos{% endblock %}</title>
        <meta name="keywords" content="{% block motsCles %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/ecommerce.css') }}" />

        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('logo.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('produits') }}"><span>Ecommerce</span></a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-ex-collapse">
                    <div class="nav pull-right">
                        {% render(controller('EcommerceBundle:Produits:recherche')) %}
                    </div>
                </div>
            </div>
        </div>
        {% block body %} {% endblock %}
        <hr />
        <footer class="section">
            <div class="background-image" style="background-image : url('https://unsplash.imgix.net/reserve/MTuhqSiPQbeVnaIYU16X_P1160798_adj.jpg?w=1024&amp;q=50&amp;fm=jpg&amp;s=ede6dca4fff55fa0cc6ec27bcd3480d9')"></div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <ul class="nav nav-list">
                            <li class="nav-header surligneur">
                                <h4>Informations</h4>
                            </li>
                            <li>{% render(controller('PagesBundle:Pages:menu')) %}</li>
                        </ul>
                    </div>
                    <div class="col-sm-4">
                        <ul class="nav nav-list">
                            <li class="nav-header surligneur">
                                <h4>Notre entrepôt</h4>
                            </li>
                            <li>
                                <a><i class="fa fa-map-marker"></i> {{ adresse }}</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-4">
                        <ul class="nav nav-list">
                            <li class="nav-header surligneur">
                                <h4>Nous contacter</h4>
                            </li>
                            <li>
                                <a><i class="fa fa-at"></i> Email : {{ email }}</a>
                            </li>
                            <li>
                                <a><i class="fa fa-facebook"></i>&nbsp; Facebook : {{ facebook }}</a>
                            </li>
                            <li>
                                <a><i class="fa fa-phone"></i> Telephone : {{ telephone }}</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <br>
                <div class="row text-center">
                    <i class="fa fa-hand-o-right"></i>&nbsp;© Copyright &nbsp; Franjos &nbsp; 2016 - {{ "now"|date('Y') }}
                </div>
            </div>
        </footer>
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>